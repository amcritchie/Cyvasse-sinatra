<h1>Rules</h1>

<% make_hex = "<div class='hex'>
                <div class='top'></div>
                <div class='square'></div>
                <div class='bottom'></div>
               </div>" %>

<%
   p "<<<<<<"
   board = Array.new(11)
   odd = true
   p board
   p board.class
   board.each do |row|
     p "======"
     if odd
       p "mmm"
       row = Array.new(12,make_hex)
       odd = false
     else
       p "nnnnn"
       row = Array.new(11,make_hex)
       odd = true
     end
   end
%>

<body>
<div class="board">
  <section class="clearfix">
    <article class="full_column">

      <div class="hex_grid">
        <div class="hex_row">
          <%= make_hex %>
